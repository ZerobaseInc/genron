{
  "name": "Genron Omega",
  "description": "",
  "env": {
    "DB_HOST": {
      "required": true
    },
    "DB_NAME": {
      "required": true,
      "value": "genron"
    },
    "DB_PASS": {
      "required": true
    },
    "DB_PORT": {
      "required": true,
      "value": "3306"
    },
    "DB_USER": {
      "required": true,
      "value": "root"
    },
    "DRUPAL_HASH_SALT": {
      "required": true,
      "generator": "secret"
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "ah-mariadb-stackhero"
  ],
  "buildpacks": [
    {
      "url": "heroku-community/apt"
    },
    {
      "url": "heroku/php"
    }
  ],
  "stack": "heroku-22",
  "scripts": {
    "postdeploy": "bin/heroku-postdeploy.sh"
  }
}